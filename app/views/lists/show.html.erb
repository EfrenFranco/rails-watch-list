<div class="position-relative">
  <div class="card-category card-large">
    <h1><%= @list.name %></h1>

    <% @list.bookmarks.each do |bookmark| %>
    <div> <%= bookmark.movie.title %> - <%= bookmark.comment %></div>
    <% end %>
  <span class="movie-tag"></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        add a movie
      </button>
      <%= link_to "delete this list", lists_path(@list), class: "btn btn-warning", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
    <%= link_to "Go back to the main page", lists_path(@list), class: "btn btn-primary" %>
