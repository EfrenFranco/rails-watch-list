<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new list</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Drama' %>
          <%= f.input :photo, as: :file %>
          <div class="create_buttons mb-2">
            <%= f.submit class: 'btn btn-success' %></div>
        <% end %>
        <%= link_to "Go back to the main page", lists_path(@list), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
